@import "bourbon/bourbon";
$themeGreen: #15c84e;
$themeFontColor:#4b4b4b;


.flex-row {
  @include display(flex);
  @include flex-direction(row);
}
.flex-column {
  @include display(flex);
  @include flex-direction(column);
}
// flex layout make align center horizontal
.justify-content-center {
  justify-content:center;
  display: flex;
}
// flex layout make align center vertical
.align-content-center{
    align-items:center;
    display: flex;
}
.content-center{
    @extend .justify-content-center;
    @extend .align-content-center;
}
@for $i from 1 to 10 {
  .flex-#{$i} {
    @include flex($i);
  }
}
.scroll-y{
    overflow-y: scroll;
    overflow-x: hidden;
  &::-webkit-scrollbar {
    width: 0px;
    height: 0px;
  }
}
.text-overflow {
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

body{
  font-size: 16px;
  font-weight: normal;
  color:$themeFontColor;
  background: #f2f2f2;
  overflow: hidden;
  padding: 0;
  margin: 0;
  >div#app{
      position:absolute;
      top:0;
      left:0;
      width:100%;
      height:100%;
      @extend .flex-column;
  }
}

